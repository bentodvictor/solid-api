generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(nanoid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())

  checkIns CheckIn[]

  @@map("user")
}

model CheckIn {
  id           String    @id @default(nanoid())
  created_at   DateTime  @default(now())
  validated_at DateTime?

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  gym    Gym    @relation(fields: [gym_id], references: [id])
  gym_id String

  @@map("check_ins")
}

model Gym {
  id          String  @id @default(nanoid())
  title       String
  description String?
  phone       String?
  latiture    Decimal
  longitude   Decimal

  checkIns CheckIn[]

  @@map("gyms")
}
